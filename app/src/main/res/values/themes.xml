<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="HentoidTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/HentoidActionBar</item>
        <item name="android:actionBarStyle">@style/HentoidActionBar</item>
        <item name="icon">@drawable/ic_hentoid</item>
        <item name="android:icon">@drawable/ic_hentoid</item>
    </style>

    <style name="HentoidActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@drawable/normal_state</item>
        <item name="android:background">@drawable/normal_state</item>
        <item name="android:displayOptions">showHome|showTitle</item>
        <item name="displayOptions">showHome|showTitle</item>
    </style>

</resources>
