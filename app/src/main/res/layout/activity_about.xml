<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_about_hentoid"
        android:layout_width="@dimen/notification_large_icon_width"
        android:layout_height="@dimen/notification_large_icon_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_about_hentoid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_about_hentoid"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/iv_about_hentoid"
        android:layout_toRightOf="@+id/iv_about_hentoid"
        android:text="@string/about_hentoid"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/iv_about_community"
        android:layout_width="@dimen/notification_large_icon_width"
        android:layout_height="@dimen/notification_large_icon_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/iv_about_hentoid"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/google_plus" />

    <TextView
        android:id="@+id/tv_about_community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_about_hentoid"
        android:layout_alignStart="@+id/tv_about_hentoid"
        android:layout_alignTop="@+id/iv_about_community"
        android:layout_below="@+id/tv_about_hentoid"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/tv_about_hentoid"
        android:layout_toRightOf="@+id/iv_about_community"
        android:text="@string/about_community"
        android:textAppearance="?android:attr/textAppearanceLarge" />
</RelativeLayout>