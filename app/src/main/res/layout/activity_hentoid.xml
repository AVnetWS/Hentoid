<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!-- The navigation drawer -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/primary"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:dividerPadding="10dp"
        android:orientation="vertical">

        <Button
            style="@style/NavDrawerButtonStyle"
            android:id="@+id/ndHitomiWbButton"
            android:onClick="ndOpenWebView"
            android:text="@string/navigation_drawer_hitomi_wb" />

        <Button
            style="@style/NavDrawerButtonStyle"
            android:id="@+id/ndNhentaiWbButton"
            android:onClick="ndOpenWebView"
            android:text="@string/navigation_drawer_nhentai_wb" />

        <Button
            style="@style/NavDrawerButtonStyle"
            android:onClick="ndDownloads"
            android:text="@string/navigation_drawer_downloads" />

        <Button
            style="@style/NavDrawerButtonStyle"
            android:onClick="ndDownloadManager"
            android:text="@string/navigation_drawer_download_manager" />

        <Button
            style="@style/NavDrawerButtonStyle"
            android:onClick="ndPreferences"
            android:text="@string/navigation_drawer_preferences" />

        <Button
            style="@style/NavDrawerButtonStyle"
            android:onClick="ndAbout"
            android:text="@string/navigation_drawer_about" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
