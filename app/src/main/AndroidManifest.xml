<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="me.devsaki.hentoid" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Get permission for reliable local dispatching on non-Google Play devices. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission
        android:name="android.permission.VIBRATE"
        android:maxSdkVersion="18" />

    <application
        android:name=".HentoidApplication"
        android:allowBackup="false"
        android:configChanges="orientation|screenSize"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        tools:ignore="UnusedAttribute" >
        <activity
            android:name=".DownloadsActivity"
            android:launchMode="singleTask" >
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".abstracts.BaseWebActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="standard"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".activities.HitomiActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="standard"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".activities.NhentaiActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="standard"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".activities.TsuminoActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="standard"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            tools:ignore="InnerclassSeparator" />

        <service
            android:name=".service.DownloadManagerService"
            android:configChanges="orientation|screenSize"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".DownloadManagerActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_download_manager"
            android:launchMode="singleTask" />
        <activity
            android:name=".SelectFolderActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".ImporterActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".PreferencesActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_preferences"
            android:launchMode="singleTask"
            android:parentActivityName=".DownloadsActivity"
            tools:ignore="UnusedAttribute" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.devsaki.hentoid.DownloadsActivity" />
        </activity>
        <activity
            android:name=".AppLockActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateAlwaysVisible" />
        <activity
            android:name=".AboutActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_about"
            android:launchMode="singleTask"
            android:parentActivityName=".DownloadsActivity"
            tools:ignore="UnusedAttribute" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.devsaki.hentoid.DownloadsActivity" />
        </activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".updater.UpdateNotificationReceiver"
            android:enabled="true"
            android:exported="false" >
            <intent-filter>
                <action android:name="me.devsaki.hentoid.updater.DOWNLOAD_CANCELLED" />
                <action android:name="me.devsaki.hentoid.updater.NOTIFICATION_REMOVED" />
                <action android:name="me.devsaki.hentoid.updater.INSTALL_UPDATE" />
                <action android:name="me.devsaki.hentoid.updater.UPDATE_DOWNLOADED" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!--
         Register AnalyticsReceiver and AnalyticsService to support background
         dispatching on non-Google Play devices.
        -->
        <receiver
            android:name="com.google.android.gms.analytics.AnalyticsReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.google.android.gms.analytics.ANALYTICS_DISPATCH" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.analytics.AnalyticsService"
            android:enabled="true"
            android:exported="false" />

        <!--
             Register CampaignTrackingReceiver and CampaignTrackingService to enable
             installation campaign reporting
        -->
        <receiver
            android:name="com.google.android.gms.analytics.CampaignTrackingReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <service android:name="com.google.android.gms.analytics.CampaignTrackingService" />
    </application>

</manifest>
